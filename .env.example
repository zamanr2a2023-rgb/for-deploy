# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/fsm_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"

# Server Configuration
PORT=5000
NODE_ENV=development

# External API Keys (Optional for enhanced location services)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key-for-geocoding"

# BulkGate SMS API Configuration
# Get these from: https://portal.bulkgate.com
BULKGATE_SMS_APP_ID="your-bulkgate-sms-app-id"
BULKGATE_SMS_APP_TOKEN="your-bulkgate-sms-app-token"

# BulkGate OTP API Configuration
BULKGATE_OTP_APP_ID="your-bulkgate-otp-app-id"
BULKGATE_OTP_APP_TOKEN="your-bulkgate-otp-app-token"

# SMS Configuration
DEFAULT_COUNTRY_CODE=254
# Default country code for phone number normalization (254=Kenya, 880=Bangladesh, 91=India)
SKIP_SMS_FOR_TEST_NUMBERS=true
# Set to 'true' to skip SMS sending for test numbers (e.g., 1111111111, 2222222222) in development

# Firebase Push Notification Configuration
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
# ONESIGNAL_APP_ID=""


# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024
UPLOAD_PATH="uploads/"

# Image Upload Service URL


# Payout Configuration
WEEKLY_PAYOUT_DAY=1
# 0=Sunday, 1=Monday, 2=Tuesday, etc.

# Email Configuration (for OTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Payment Gateway Configuration (if using external payment processor)
PAYMENT_API_KEY="your-payment-gateway-api-key"
PAYMENT_WEBHOOK_SECRET="your-webhook-secret"

# CORS Configuration (Optional)
ALLOWED_ORIGINS="http://localhost:3001,http://localhost:3002"
